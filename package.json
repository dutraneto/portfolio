{
    "name": "portfolio",
    "version": "1.0.0",
    "description": "my portfolio",
    "main": "index.js",
    "scripts": {
        "watch:sass": "node-sass sass/main.scss css/style.css -w",
        "devserver": "live-server",
        "start": "npm-run-all --parallel watch:sass devserver",
        "compile:sass": "node-sass sass/main.scss css/style.comp.css",
        "prefix:css": "postcss --use autoprefixer -b 'last 20 versions' css/style.comp.css -o css/style.prefix.css",
        "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
        "build:css": "npm-run-all compile:sass prefix:css compress:css"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/dutraneto/portfolio.git"
    },
    "keywords": [
        "portfolio",
        "site",
        "html",
        "css"
    ],
    "author": "DutraNeto <dutraneto@me.com> (http://dutraneto.github.io/)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/dutraneto/portfolio/issues"
    },
    "homepage": "https://github.com/dutraneto/portfolio#readme",
    "devDependencies": {
        "autoprefixer": "^9.4.2",
        "concat": "^1.0.3",
        "node-sass": "^4.11.0",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^6.0.1"
    },
    "dependencies": {
        "live-server": "^1.2.1"
    }
}
